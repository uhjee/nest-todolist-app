{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true, // import * as [] from '[]'
    "paths": {
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@users": ["src/users"],
      "@users/*": ["src/users/*"],
      "@todo": ["src/todo"],
      "@todo/*": ["src/todo/*"],
      "@utils": ["src/util"],
      "@utils/*": ["src/util/*"]
    }
  }
}
